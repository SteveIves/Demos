import System
import Cirrious.CrossCore.Converters

namespace TipCalc.Core.Converters
	
	public class DoubleCurrencyValueConverter extends MvxValueConverter<double, String>
		
		protected override method Convert, String
			valueToConvert, double
			targetType, @Type
			parameter, @Object
			culture, @System.Globalization.CultureInfo
			endparams
		proc
			mreturn String.Format("{0:c}", valueToConvert)
		endmethod
		
	endclass
	
endnamespace
