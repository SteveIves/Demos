            if (%ssc_getemsg(a_dbchn,errtxt,length,,dberror)==SSQL_FAILURE)
                errtxt="Failed to open cursor"
        end
    end

    ;;-------------------------------------------------------------------------
    ;;Bind the host variables for data to be inserted
    ;;
    if (ok)
    begin
        if (%ssc_bind(a_dbchn,cursor,9,
		&    order_line.order_number,
		&    order_line.line_number,
		&    order_line.sku,
		&    order_line.description,
		&    order_line.qty_ordered,
