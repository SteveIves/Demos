        ;;Load data into bound record
        order_line = a_data

        ;;Clean up the data
        if ((!order_line.order_number)||(!%IsNumeric(^a(order_line.order_number))))
            clear order_line.order_number
        if ((!order_line.line_number)||(!%IsNumeric(^a(order_line.line_number))))
            clear order_line.line_number
        order_line.sku=%atrim(order_line.sku)+%char(0)
        order_line.description=%atrim(order_line.description)+%char(0)
        if ((!order_line.qty_ordered)||(!%IsNumeric(^a(order_line.qty_ordered))))
            clear order_line.qty_ordered
        if ((!order_line.qty_allocated)||(!%IsNumeric(^a(order_line.qty_allocated))))
