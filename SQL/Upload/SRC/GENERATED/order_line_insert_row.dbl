	literal
		sql, a*, "INSERT INTO ORDER_LINE ("
		& "ORDER_NUMBER,"
		& "LINE_NUMBER,"
		& "SKU,"
		& "DESCRIPTION,"
		& "QTY_ORDERED,"
		& "QTY_ALLOCATED,"
		& "PRICE,"
		& "LINE_VALUE,"
