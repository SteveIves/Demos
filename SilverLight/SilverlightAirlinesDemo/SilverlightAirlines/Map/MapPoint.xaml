<Canvas
  xmlns="http://schemas.microsoft.com/client/2007"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Name="MapPointTemplate" 
  Width="10"
  Height="10">

  <Ellipse Name="City" Width="10" Height="10" Cursor="Hand" StrokeThickness="3" RenderTransformOrigin="0.5,0.5">
    <Ellipse.Fill>
    	<LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
    		<GradientStop Color="#FFD12E05" Offset="1"/>
    		<GradientStop Color="#FFEC856C" Offset="0"/>
    	</LinearGradientBrush>
    </Ellipse.Fill>
    <Ellipse.RenderTransform>
    	<TransformGroup>
    		<ScaleTransform ScaleX="1" ScaleY="1"/>
    		<SkewTransform AngleX="0" AngleY="0"/>
    		<RotateTransform Angle="-464.457"/>
    		<TranslateTransform X="0" Y="0"/>
    	</TransformGroup>
    </Ellipse.RenderTransform>
    <Ellipse.Stroke>
      <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#FFA8442C" Offset="0"/>
        <GradientStop Color="#FFFF3300" Offset="0.986"/>
      </LinearGradientBrush>
    </Ellipse.Stroke>
  </Ellipse>

