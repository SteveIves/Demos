  <TextBlock Name="Label"  FontSize="14" FontWeight="Bold" Canvas.Left="12.5" RenderTransformOrigin="0.5,0.5" Canvas.Top="0">
    <TextBlock.Foreground>
      <SolidColorBrush Color="#ff000000" />
    </TextBlock.Foreground>
    <TextBlock.RenderTransform>
      <TransformGroup>
        <ScaleTransform ScaleX="0.75" ScaleY="1"/>
      </TransformGroup>
    </TextBlock.RenderTransform>
  </TextBlock>
  
